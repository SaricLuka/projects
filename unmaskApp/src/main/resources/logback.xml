<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>src/logs/logs.log</file>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%-5level] [%logger{20}] - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="FILE" />
    </root>
</configuration>